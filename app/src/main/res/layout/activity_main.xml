<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="#82acafaf"
    tools:context="com.example.asus.androidhw1dictionaryquiz.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:layout_weight="2"
        android:layout_gravity="center|bottom"
        android:textSize="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:shadowColor="#7a0404"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="2"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffa200"
        android:onClick="Training"
        android:id="@+id/traningbutton"
        android:text="Traınıng "
        android:textSize="20dp"
        android:layout_gravity="center"
        >

    </Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0099ff"
        android:onClick="AddWord"
        android:id="@+id/addwordbutton"
        android:text="Add Word"
        android:textSize="20dp"
        android:layout_gravity="center"
        >
    </Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f40800"
        android:onClick="Quiz"
        android:id="@+id/quizbutton"
        android:text="Quiz"
        android:textSize="20dp"
        android:layout_gravity="center">
    </Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </LinearLayout>


</LinearLayout>
